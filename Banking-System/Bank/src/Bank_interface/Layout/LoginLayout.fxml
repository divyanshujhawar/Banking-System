<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Bank_interface.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="120.0">
         <children>
            <VBox alignment="CENTER" spacing="40.0">
               <children>
                  <HBox alignment="CENTER" spacing="60.0">
                     <children>
                        <Label text="Username" />
                        <TextField fx:id="uID" promptText="enter username" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="65.0">
                     <children>
                        <Label text="Password" />
                        <PasswordField fx:id="pass" promptText="enter password" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#canelClicked" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#submitClicked" text="Submit" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
